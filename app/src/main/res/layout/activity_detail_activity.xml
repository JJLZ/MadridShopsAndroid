<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emprendesoft.madridactivities.activities.ActivityDetailActivity">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_detail_activity__activity_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:src="@drawable/activity_placeholder"
                />

            <TextView
                android:id="@+id/activity_detail_activity__activity_name"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:alpha="0.5"
                android:background="@color/gradient_start_color_button"
                android:gravity="center_horizontal|bottom"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textAllCaps="true"
                tools:text="El Corte Chino"
                />

            <TextView
                android:id="@+id/activity_detail_activity__activity_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/activity_detail_activity__activity_name"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textStyle="bold|italic"
                tools:text="Address"
                />

            <TextView
                android:id="@+id/activity_detail_activity__activity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_activity__activity_address"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                tools:text="Description"
                />

            <ImageView
                android:id="@+id/activity_detail_activity__activity_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_detail_activity__activity_description"
                tools:src="@drawable/map_placeholder"
                />
        </RelativeLayout>

    </ScrollView>

</LinearLayout>
